<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="constraint_layout_child">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linear_recycler_view_in_constraint_layout" parent="constraint_layout_child">
        <item name="android:clipToPadding">false</item>
        <item name="layoutManager">LinearLayoutManager</item>
    </style>

    <style name="card_view_in_constraint_layout" parent="CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>
</resources>