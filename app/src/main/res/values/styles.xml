<resources>

    <style name="default_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_contents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linear_layout" parent="default_layout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="scroll_view" parent="match_parents">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="guideline" parent="wrap_contents">
        <item name="android:showDividers">middle</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="recycler_view" parent="default_layout">
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="linear_recycler_view" parent="recycler_view">
        <item name="layoutManager">LinearLayoutManager</item>
    </style>

    <style name="grid_recycler_view" parent="recycler_view">
        <item name="layoutManager">GridLayoutManager</item>
    </style>

    <style name="card_view" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>
</resources>